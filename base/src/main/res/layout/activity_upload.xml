<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/uploadContainer"
    >
    <TextView
        android:id="@+id/thankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="32sp"
        android:text="Bedankt!"
        android:visibility="gone"/>

    <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_loading_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        app:mainColor="@color/colorAqua"
        app:secondaryColor="@color/colorBlueJeans"
        app:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Jouw melding is doorgezet naar de dichtsbijzijnde gemeente. \n We houden je op de hoogte van verdere ontwikkelingen."
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="gone" />

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Voltooien"
        android:padding="15dp"
        android:visibility="gone"
        android:background="@color/titleBackground"
        android:onClick="newIssue"/>



</LinearLayout>